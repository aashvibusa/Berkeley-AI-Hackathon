{
  "manifest_version": 3,
  "name": "Glossa - Language Learning",
  "version": "1.0",
  "description": "Language learning made simple with text highlighting and translation",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Glossa"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 